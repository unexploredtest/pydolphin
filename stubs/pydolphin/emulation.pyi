"""
Module for controlling the emulation.
"""


def pause() -> None:
    """
    Pauses the emulation. Acts like tapping the "Pause"-Button.
    """

def resume() -> None:
    """ 
    Resumes the emulation. Acts like tapping the "Play"-Button.
    """

def change_speed(speed_percent) -> None:
    """ 
    Resumes the emulation. Acts like tapping the "Play"-Button.

    :param speed_percent: Speed in percent. 0 Means unlimited speed.
    """

def reset() -> None:
    """
    Resets the emulation. Acts like tapping the "Reset"-Button.
    """
